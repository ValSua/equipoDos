<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        tools:context=".view.HomeActivity">

        <TextView
            android:id="@+id/tvTitleLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tus Rutinas"
            android:textSize="30dp"
            android:background="@color/gray"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

<!--        <ImageView-->
<!--            android:id="@+id/crearRutina"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="400dp"-->
<!--            android:src="@drawable/crea_rutina"-->
<!--            android:visibility="visible"-->
<!--            tools:ignore="MissingConstraints"-->
<!--            tools:layout_editor_absoluteX="16dp"-->
<!--            app:layout_constraintTop_toBottomOf="@id/tvTitleLogin"-->
<!--            tools:layout_editor_absoluteY="16dp" />-->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rutinas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/tvTitleLogin"
            app:layout_constraintBottom_toTopOf="@id/botones"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/botones"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/rutinas"
            app:layout_constraintBottom_toTopOf="@id/Menutoolbar">



            <ImageButton
                android:id="@+id/nuevarutina"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="18dp"
                android:layout_marginStart="300dp"
                android:background="@drawable/plus"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <!-- Aquí puedes agregar más botones u otros elementos -->

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Menutoolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageButton
                android:id="@+id/btnRutinas"
                android:layout_width="64dp"
                android:layout_height="54dp"
                android:src="@drawable/rutinas"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnPerfil"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintHorizontal_bias="0.5"
                android:background="@android:color/transparent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="-9dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textViewRutinas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rutinas"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/btnRutinas"
                app:layout_constraintStart_toStartOf="@id/btnRutinas"
                app:layout_constraintEnd_toEndOf="@id/btnRutinas"
                android:layout_marginTop="8dp"
                tools:ignore="MissingConstraints" />

            <ImageButton
                android:id="@+id/btnPerfil"
                android:layout_width="56dp"
                android:layout_height="54dp"
                android:src="@drawable/user_circle"
                app:layout_constraintStart_toEndOf="@id/btnRutinas"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@android:color/transparent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintHorizontal_bias="0.5"
                android:layout_marginStart="150dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="-1dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textViewPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/btnPerfil"
                app:layout_constraintStart_toStartOf="@id/btnPerfil"
                app:layout_constraintEnd_toEndOf="@id/btnPerfil"
                android:layout_marginTop="8dp"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>




